<h1>Eat Da Burger!</h1>

<div class="row">
    <div class="col-sm-6">
        <h3>Burgers</h3>
    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devoured=false}}
        {{/if}}
        {{/each}}    
    </ul>
    </div>
    <div class="col-sm-6">
        <h3>Devoured</h3>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
</div>
<div>
<h2>What Burger do you want to eat?</h2>
<form id="addburger" class="button-size">
    <textarea type ="text" name="burger"></textarea>
    <button type="submit">Add Burger</button>
</form>
</div>


